body {
    font-family: 'Helvetica Neue', sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f4f4f9;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
}

.container {
    text-align: center;
    background: #fff;
    padding: 40px;
    border-radius: 15px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    width: 350px;
}

h1 {
    font-size: 36px;
    color: #333;
    margin-bottom: 20px;
    letter-spacing: 2px;
    text-transform: uppercase;
}

button {
    background-color: #6200ea;
    color: white;
    font-size: 18px;
    padding: 15px 30px;
    border: none;
    border-radius: 25px;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease;
    margin-top: 20px;
}

button:hover {
    background-color: #3700b3;
    transform: scale(1.05);
}

p {
    font-size: 16px;
    color: #333;
    margin-top: 15px;
    font-weight: 400;
}

.status {
    font-weight: bold;
    color: #6200ea;
}

.alert {
    color: #e91e63;
    font-size: 16px;
    margin-top: 20px;
    font-weight: 500;
}
